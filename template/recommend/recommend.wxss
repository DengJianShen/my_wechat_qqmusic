@import "/template/apptip/apptip.wxss";
@import "/template/footer/footer.wxss";

.recommend__slider {
  margin-bottom: 14px;
}

.recommend__slider__image {
  width: initial;
  height: initial;
  display: initial;
}

.recommend__radio-list, .recommend__song-list {
  margin-left: 10px;
  margin-right: 10px;
}

.recommend__radio-list {
  margin-bottom: 7px;
}

.recommend__list-title {
  font-size: 16px;
  color: #000;
  margin-bottom: 11px;
  font-weight: normal;
  display: block;
}

.recommend__list-container {
  overflow: hidden;
  margin-right: -8px;
}

.recommend__item {
  float: left;
  width: 50%;
  padding-right: 8px;
  margin-bottom: 10px;
  overflow: hidden;
  box-sizing: border-box;
}

.recommend__media {
  margin-bottom: 5px;
  width: 100%;
  height: 165px;
  display: inline-block;
  overflow: hidden;
  position: relative;
}

.recommend__media::before {
  content: "";
  display: block;
  padding-top: 100%;
}

.recommend__media__image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.recommend__media__icon {
  height: 24px;
  bottom: 5px;
  right: 5px;
  width: 24px;
  background-position: 0 0;
  position: absolute;
  display: block;
  z-index: 10;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/list_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 24px 60px;
}

.recommend__info {
  padding: 0 7px 5px;
  color: #000;
}

.recommend__info__title {
  font-size: 14px;
  height: 36px;
  line-height: 18px;
  white-space: normal;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: normal;
  display: block;
}

.recommend__list-container navigator {
  background-color: #fff;
}

.recommend__media__listen-count {
  left: 5px;
  bottom: 7px;
  display: block;
  line-height: 12px;
  color: #fff;
  position: absolute;
  z-index: 10;
  font-size: 14px;
}

.recommend__media__listen-count__icon {
  display: block;
  float: left;
  width: 10px;
  height: 10px;
  background-position: 0 -50px;
  margin-right: 5px;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/list_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 24px 60px;
}
