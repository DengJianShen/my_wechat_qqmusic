.search-wrap__search-bar {
  width: 100%;
  display: block;
  background: #f4f4f4;
  padding: 10px;
  box-sizing: border-box;
}

.search-wrap__search-bar__wrap {
  position: relative;
  border-radius: 3px;
  background: #fff;
  padding: 8px 12px 8px 35px;
  width: calc(100% - 50px);
  float: left;
}

.search-wrap__search-bar__wrap__input {
  height: 20px;
  line-height: 20px;
  width: 100%;
  color: rgba(0, 0, 0, 0.3);
  border: none;
  font-size: 14px;
}

.search-wrap__search-bar__wrap__icon {
  position: absolute;
  top: 12px;
  left: 10px;
  width: 18px;
  height: 18px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
}

.search-wrap__key, .search-wrap__search, .search-wrap__result {
  background: #fff;
  padding: 15px 15px 10px 15px;
  height: calc(100vh - 62.25px - 86px);
  box-sizing: border-box;
}

.search-wrap__key__title {
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 14px;
  display: block;
  line-height: 24px;
}

.search-wrap__key__tags__tag {
  display: inline-block;
  font-size: 14px;
  padding: 0 10px;
  height: 30px;
  line-height: 30px;
  color: #000;
  border: 1px solid rgba(0, 0, 0, 0.6);
  border-radius: 99px;
  word-break: keep-all;
  margin-bottom: 10px;
  margin-right: 14px;
}

.search-wrap__key__tags__tag.hot {
  color: #fc4524;
  border-color: #fc4524;
}

.search-wrap__key__tags navigator {
  display: inline-block;
}

.search-wrap__search-bar__cancel {
  padding-right: 10px;
  padding-left: 10px;
  font-size: 14px;
  height: 35px;
  line-height: 35px;
  display: block;
  float: left;
}

.search-wrap__search__item {
  position: relative;
  display: block;
  height: 44px;
  line-height: 44px;
}

.search-wrap__search__item__time-icon {
  position: absolute;
  left: 0;
  top: 12px;
  width: 20px;
  height: 20px;
}

.search-wrap__search {
  border-top: 1px solid #ededed;
  padding: 0 15px;
  box-sizing: border-box;
}

.search-wrap__search__item__del-icon {
  position: absolute;
  right: 0;
  top: 12px;
  width: 20px;
  height: 20px;
}

.search-wrap__search__item__content {
  position: absolute;
  left: 40px;
  right: 50px;
  display: block;
  height: 44px;
  line-height: 44px;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-wrap__search__item__del-icon::before,
.search-wrap__search__item__del-icon::after {
  position: absolute;
  left: 0;
  top: 0;
  content: "";
  background: rgba(0, 0, 0, 0.6);
  transform: rotate(45deg);
}

.search-wrap__search__item__del-icon::before {
  width: 17px;
  height: 1px;
  top: 8px;
}

.search-wrap__search__item__del-icon::after {
  width: 1px;
  height: 17px;
  left: 8px;
}

.search-wrap__search__del-tip {
  display: block;
  margin: 0 auto;
  line-height: 44px;
  color: #47c88a;
  font-size: 12px;
  text-align: center;
}

.search-wrap__result {
  overflow-x: hidden;
  overflow-y: scroll;
  padding: 0;
}

.search-wrap__result__item {
  position: relative;
  height: 55px;
  padding-left: 56px;
  overflow: hidden;
  box-sizing: border-box;
}

.search-wrap__result__item__music-icon {
  position: absolute;
  top: 18px;
  left: 18px;
  width: 22px;
  height: 20px;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/search_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 22px 30px;
}

.search-wrap__result__item__song {
  display:block;
  margin: 10px 0 2px;
  line-height: 18px;
  font-size: 16px;
  font-weight: normal;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.search-wrap__result__item__singer {
  display:block;
  font-size: 14px;
  color: #808080;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
