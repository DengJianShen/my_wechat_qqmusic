@import "/template/apptip/apptip.wxss";
.rank-list {
  margin: 10px;
}

.rank-list__item {
  margin-bottom: 10px;
  overflow: hidden;
  display: flex;
  background-color: #fff;
  align-items: center;
}

.rank-list__item__main {
  position: relative;
}

.rank-list__item__main__image {
  width: 100px;
  height: 100px;
}

.rank-list__item__main__listen {
  position: absolute;
  display: block;
  left: 5px;
  bottom: 7px;
  line-height: 12px;
  color: #fff;
  opacity: 0.6;
  font-size: 12px;
  z-index: 10;
}

.rank-list__item__main__listen__icon {
  display: block;
  float: left;
  width: 10px;
  height: 10px;
  background-position: 0 -50px;
  margin-right: 3px;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/list_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 24px 60px;
}

.rank-list__item__info {
  position: relative;
  flex: 1;
  margin: 0 10px 0 15px;
  width:calc(100% - 125px);
}

.rank-list__item__info__cont {
width:100%;
}

.rank-list__item__info__cont__title {
  display: block;
  font-size: 16px;
  color: #000;
  font-weight: normal;
  margin-bottom: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rank-list__item__info__cont__content {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  line-height: 20px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rank-list__item__info__cont__content__text {
  color: #000;
  margin-left: 8px;
  margin-right: 5px;
}

.rank-list__item__info__arrow {
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -4px;
  width: 6px;
  height: 6px;
  border-right: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
  transform: rotate(-45deg);
}
