.song-info {
  position: relative;
  display: flex;
  align-items: center;
  padding: 15px;
  background: rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.song-info__img-box {
  width: 60px;
  height: 60px;
  margin-right: 15px;
}

.song-info__img-box__thumb {
  width: 100%;
  height: 100%;
  transition: all .4s;
}

.song-info__msg-box {
  flex: 1;
  overflow: hidden;
}

.song-info__msg-box__song-name {
position:relative;
height:30px;
overflow:hidden;
font-size:18px;
font-weight:normal;
color:#fff;
display:block;
white-space:nowrap;
text-overflow:ellipsis;
}

.song-info__msg-box__singer-name {
  height: 21px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  color: #fff;
  display: block;
}

.song-info__control {
  width: 43px;
  height: 43px;
  border: solid 1px #fff;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  opacity: 0.6;
}

.song-info__control::after {
  content: "";
  display: block;
  width: 17px;
  height: 19px;
  margin: 13px 0 0 16px;
  background-position: 0 -150px;
  background-image: url(https://y.gtimg.cn/mediastyle/mobile/app/share/img/sprite_play.png?max_age=2592000&d=20151203183007);
  background-repeat: no-repeat;
  background-size: 40px 350px;
}

.song-info__control.pause::after {
  width: 9px;
  height: 15px;
  margin: 14px 0 0 17px;
  background-position: 0 -180px;
}
