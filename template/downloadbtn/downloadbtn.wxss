page{
    width: 100%;
    height: 100%;
    background-color: #000;
}
.downloadbtn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  overflow: hidden;
  padding: 10px;
  background-color: #000;
}

.downloadbtn-box__btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 43px;
  white-space: nowrap;
  font-size: 18px;
  color: #fff;
  border-radius: 3px;
  border: solid 1px;
}

.downloadbtn-box__btn::before {
  content: "";
  display: block;
  width: 24px;
  height: 24px;
  margin-right: 10px;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/app/share/img/music_logo.png?max_age=2592000&v=30cd379f7b9491439f2e8dcd6e1508b6');
  background-size: cover;
}
